@model IEnumerable<MaestroDetalle.Models.ClaseProducto>

@{
    ViewBag.Title = "Index";
}

<h2>LISTADO DE PRODUCTOS</h2>


<br/>


@using (Html.BeginForm("BusquedaFiltro", "ClaseProductos", FormMethod.Get))
{
    <div class="form-control-static">
        <div class="form-group">
            <label class="control-label col-md-2">
                Busqueda por nombre
            </label>
            <div class="col-md-10">
                @Html.TextBox("Nombre_Producto")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Busqueda" class="btn btn-default" />
            </div>
        </div>

        

    </div>

}






        <p>
            @Html.ActionLink("CREAR NUEVO", "Create", new { }, new { @class = "btn btn-default" })
        </p>
        <table class="table">
            <tr>
                <th>
                    NOMBRE

                </th>
                <th>
                    PRECIO UNIDAD
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre_Producto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unitprice_Producto)
                    </td>
                    <td>
                        @Html.ActionLink("EDITAR", "Edit", new { id = item.Id_Producto }, new { @class = "btn btn-default" })
                        @Html.ActionLink("DETALLE", "Details", new { id = item.Id_Producto }, new { @class = "btn btn-default" })

                        @Html.ActionLink("BORRAR", "Delete", new { id = item.Id_Producto }, new { @class = "btn btn-default" })
                    </td>
                </tr>
            }

        </table>










